%p#notice= notice
%section
  %h2= @article.title
  = simple_format @article.body

%section
  %h3 comments
  %ul
    - @article.comments.each do |comment|
      %li
        %strong #{comment.name} say:
        = comment.body

= link_to 'Edit', edit_article_path(@article)
|
= link_to 'Back', articles_path
